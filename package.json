{
  "name": "travelr",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "description": "AI-assisted travel planner with Node backend and lit-based frontend.",
  "scripts": {
    "build": "npm run build --workspaces --if-present",
    "dev": "npm run dev --workspaces --if-present",
    "lint": "npm run lint --workspaces --if-present",
    "format": "npm run format --workspaces --if-present",
    "test": "npm run test --workspaces --if-present",
    "typecheck": "npx tsc --noEmit -p server && npx tsc --noEmit -p client && npx tsc --noEmit -p scripts",
    "clean": "rimraf node_modules server/dist client/dist"
  },
  "workspaces": [
    "server",
    "client"
  ],
  "engines": {
    "node": ">=24.10.0"
  },
  "devDependencies": {
    "@types/archiver": "^7.0.0",
    "@typescript-eslint/eslint-plugin": "^8.48.0",
    "@typescript-eslint/parser": "^8.48.0",
    "eslint": "^9.39.1",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-import": "^2.32.0",
    "prettier": "^3.6.2",
    "rimraf": "^6.1.2",
    "typescript": "^5.9.3"
  },
  "dependencies": {
    "archiver": "^7.0.1",
    "marked": "^17.0.1"
  }
}
